<% content_for :title, "Task Statistics - TaskMate" %>

<div>
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Task Statistics</h1>
        <p class="mt-2 text-gray-600">Detailed analytics and insights about your task performance</p>
      </div>
      <div class="flex space-x-3">
        <%= link_to tasks_path, class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-3 px-6 rounded-lg transition-colors shadow-sm flex items-center space-x-2" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
          </svg>
          <span>All Tasks</span>
        <% end %>
        <%= link_to new_task_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-colors shadow-sm flex items-center space-x-2" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span>New Task</span>
        <% end %>
      </div>
    </div>
  </div>

  <% if @statistics && @statistics.any? %>
    <!-- Key Metrics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Tasks -->
      <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Tasks</p>
            <p class="text-3xl font-bold text-gray-900 mt-2"><%= @statistics['total_tasks'] || 0 %></p>
            <% if @statistics['total_tasks'].to_i > 0 %>
              <p class="text-xs text-gray-500 mt-1">All tasks created</p>
            <% end %>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Completed Tasks -->
      <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Completed Tasks</p>
            <p class="text-3xl font-bold text-green-600 mt-2"><%= @statistics['completed_tasks'] || 0 %></p>
            <% if @statistics['completion_rate'] %>
              <p class="text-xs text-green-600 mt-1"><%= @statistics['completion_rate'] %>% completion rate</p>
            <% end %>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- In Progress Tasks -->
      <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">In Progress</p>
            <p class="text-3xl font-bold text-yellow-600 mt-2"><%= @statistics['in_progress_tasks'] || 0 %></p>
            <p class="text-xs text-gray-500 mt-1">Currently active</p>
          </div>
          <div class="bg-yellow-100 p-3 rounded-full">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Pending Tasks -->
      <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Pending Tasks</p>
            <p class="text-3xl font-bold text-gray-600 mt-2"><%= @statistics['pending_tasks'] || 0 %></p>
            <p class="text-xs text-gray-500 mt-1">Awaiting start</p>
          </div>
          <div class="bg-gray-100 p-3 rounded-full">
            <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts and Detailed Statistics -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Priority Distribution -->
      <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-lg font-semibold text-gray-900">Priority Distribution</h3>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>

        <% if @statistics['priority_distribution'] %>
          <div class="space-y-4">
            <% priority_colors = { 'high' => 'red', 'medium' => 'yellow', 'low' => 'green' } %>
            <% priority_labels = { 'high' => 'High Priority', 'medium' => 'Medium Priority', 'low' => 'Low Priority' } %>
            <% total_tasks = @statistics['total_tasks'].to_f %>
            
            <% %w[high medium low].each do |priority| %>
              <% count = @statistics.dig('priority_distribution', priority) || 0 %>
              <% percentage = total_tasks > 0 ? (count / total_tasks * 100).round(1) : 0 %>
              <% color = priority_colors[priority] %>
              
              <div>
                <div class="flex justify-between items-center mb-2">
                  <span class="text-sm font-medium text-gray-700"><%= priority_labels[priority] %></span>
                  <span class="text-sm text-gray-500"><%= count %> (<%= percentage %>%)</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-<%= color %>-500 h-2 rounded-full transition-all duration-300" style="width: <%= percentage %>%"></div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            <p class="text-gray-500">No priority data available</p>
          </div>
        <% end %>
      </div>

      <!-- Status Breakdown -->
      <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-lg font-semibold text-gray-900">Status Breakdown</h3>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"></path>
          </svg>
        </div>

        <div class="space-y-4">
          <% status_info = {
            'completed' => { color: 'green', label: 'Completed' },
            'in_progress' => { color: 'yellow', label: 'In Progress' },
            'pending' => { color: 'gray', label: 'Pending' },
            'cancelled' => { color: 'red', label: 'Cancelled' }
          } %>
          <% total_tasks = @statistics['total_tasks'].to_f %>
          
          <% status_info.each do |status, info| %>
            <% count = @statistics["#{status}_tasks"] || 0 %>
            <% percentage = total_tasks > 0 ? (count / total_tasks * 100).round(1) : 0 %>
            
            <div class="flex items-center justify-between py-2">
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 rounded-full bg-<%= info[:color] %>-500"></div>
                <span class="text-sm font-medium text-gray-700"><%= info[:label] %></span>
              </div>
              <div class="text-right">
                <span class="text-sm font-semibold text-gray-900"><%= count %></span>
                <span class="text-xs text-gray-500 ml-1">(<%= percentage %>%)</span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Performance Metrics -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-gray-900">Performance Summary</h3>
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
        </svg>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-600 mb-2">
            <%= @statistics['completion_rate'] || 0 %>%
          </div>
          <div class="text-sm text-gray-600">Overall Completion Rate</div>
        </div>

        <div class="text-center">
          <div class="text-3xl font-bold text-green-600 mb-2">
            <%= (@statistics['completed_tasks'] || 0) %>
          </div>
          <div class="text-sm text-gray-600">Tasks Completed</div>
        </div>

        <div class="text-center">
          <div class="text-3xl font-bold text-yellow-600 mb-2">
            <%= ((@statistics['in_progress_tasks'] || 0) + (@statistics['pending_tasks'] || 0)) %>
          </div>
          <div class="text-sm text-gray-600">Tasks Remaining</div>
        </div>
      </div>
    </div>

  <% else %>
    <!-- Empty State -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 px-6 py-12 text-center">
      <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No statistics available</h3>
      <p class="text-gray-500 mb-6">Create some tasks to see detailed statistics and insights</p>
      <%= link_to "Create Your First Task", new_task_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
    </div>
  <% end %>
</div>