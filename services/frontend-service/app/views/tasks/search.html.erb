<% content_for :title, "Search Tasks - TaskMate" %>

<div>
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Search Tasks</h1>
        <p class="mt-2 text-gray-600">Find tasks by title, description, or filters</p>
      </div>
      <%= link_to new_task_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-colors shadow-sm flex items-center space-x-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <span>New Task</span>
      <% end %>
    </div>
  </div>

  <!-- Search Form -->
  <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 mb-6">
    <%= form_with url: search_tasks_path, method: :get, local: true, class: "space-y-4" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Search Query -->
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-gray-700 mb-2">Search Query</label>
          <div class="relative">
            <%= form.text_field :q, 
                value: @search_query,
                placeholder: "Search tasks by title or description...", 
                class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
            <svg class="absolute left-3 top-4 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
        </div>

        <!-- Status Filter -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
          <%= form.select :status, 
              options_for_select([
                ['All Status', ''],
                ['Pending', 'pending'],
                ['In Progress', 'in_progress'],
                ['Completed', 'completed']
              ], params[:status]),
              {},
              { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Priority Filter -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Priority</label>
          <%= form.select :priority, 
              options_for_select([
                ['All Priority', ''],
                ['High', 'high'],
                ['Medium', 'medium'],
                ['Low', 'low']
              ], params[:priority]),
              {},
              { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
        </div>

        <!-- Search Button -->
        <div class="flex items-end">
          <%= form.submit "Search Tasks", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-colors shadow-sm" %>
        </div>

        <!-- Clear Filters -->
        <div class="flex items-end">
          <%= link_to "Clear All", search_tasks_path, class: "w-full bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-3 px-6 rounded-lg transition-colors text-center" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Search Results -->
  <% if @search_query.present? %>
    <div class="bg-white rounded-lg shadow-md border border-gray-200 mb-6">
      <!-- Results Header -->
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex justify-between items-center">
          <div>
            <h3 class="text-lg font-medium text-gray-900">Search Results</h3>
            <p class="text-sm text-gray-500 mt-1">
              Found <%= @total || 0 %> task<%= @total == 1 ? '' : 's' %> 
              <% if @search_query.present? %>
                for "<%= @search_query %>"
              <% end %>
              <% if @filters_applied && @filters_applied.any? %>
                with filters applied
              <% end %>
            </p>
          </div>
          <% if @filters_applied && @filters_applied.any? %>
            <div class="flex flex-wrap gap-2">
              <% @filters_applied.each do |filter, value| %>
                <% next if value.blank? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= filter.humanize %>: <%= value.humanize %>
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Results List -->
      <% if @tasks && @tasks.any? %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Task</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Due Date</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @tasks.each do |task| %>
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4">
                    <div>
                      <div class="text-sm font-medium text-gray-900">
                        <%= link_to task['title'], task_path(task['id']), class: "hover:text-blue-600" %>
                      </div>
                      <% if task['description'].present? %>
                        <div class="text-sm text-gray-500 mt-1">
                          <%= truncate(task['description'], length: 100) %>
                        </div>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <% status_colors = { 'pending' => 'gray', 'in_progress' => 'blue', 'completed' => 'green' } %>
                    <% status_labels = { 'pending' => 'Pending', 'in_progress' => 'In Progress', 'completed' => 'Completed' } %>
                    <% status_color = status_colors[task['status']] || 'gray' %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= status_color %>-100 text-<%= status_color %>-800">
                      <%= status_labels[task['status']] || task['status'] %>
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    <% priority_colors = { 'high' => 'red', 'medium' => 'yellow', 'low' => 'green' } %>
                    <% priority_labels = { 'high' => 'High', 'medium' => 'Medium', 'low' => 'Low' } %>
                    <% priority_color = priority_colors[task['priority']] || 'gray' %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= priority_color %>-100 text-<%= priority_color %>-800">
                      <%= priority_labels[task['priority']] || 'Medium' %>
                    </span>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500">
                    <% if task['due_date'].present? %>
                      <% due_date = Date.parse(task['due_date']) %>
                      <% days_left = (due_date - Date.today).to_i %>
                      <% if days_left < 0 %>
                        <span class="text-red-600 font-medium"><%= due_date.strftime('%Y-%m-%d') %> (Overdue)</span>
                      <% elsif days_left == 0 %>
                        <span class="text-orange-600 font-medium">Today</span>
                      <% elsif days_left == 1 %>
                        <span class="text-yellow-600 font-medium">Tomorrow</span>
                      <% else %>
                        <%= due_date.strftime('%Y-%m-%d') %> (<%= days_left %> days left)
                      <% end %>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 text-right text-sm font-medium">
                    <div class="flex justify-end space-x-2">
                      <%= link_to task_path(task['id']), class: "text-blue-600 hover:text-blue-900" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                      <% end %>
                      <%= link_to edit_task_path(task['id']), class: "text-yellow-600 hover:text-yellow-900" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                      <% end %>
                      <% if task['status'] != 'completed' %>
                        <%= button_to complete_task_path(task['id']), method: :patch, data: { confirm: 'Mark this task as completed?', turbo: true }, class: "text-green-600 hover:text-green-900 bg-transparent border-0 p-0 cursor-pointer" do %>
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                          </svg>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <!-- No Results -->
        <div class="px-6 py-12 text-center">
          <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No tasks found</h3>
          <p class="text-gray-500 mb-6">Try adjusting your search query or filters</p>
          <%= link_to "View All Tasks", tasks_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 px-6 py-12 text-center">
      <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2">Search for tasks</h3>
      <p class="text-gray-500 mb-6">Enter a search query above to find specific tasks</p>
      <%= link_to "View All Tasks", tasks_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
    </div>
  <% end %>
</div>