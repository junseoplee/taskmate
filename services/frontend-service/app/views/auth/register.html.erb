<% content_for :title, "Register - TaskMate" %>

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md">
    <!-- Logo and Title -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-blue-600 mb-2">TaskMate</h1>
      <p class="text-gray-600">Create your new account</p>
    </div>

    <!-- Registration Form Card -->
    <div class="bg-white rounded-lg shadow-lg p-8 space-y-6">
      <div>
        <h2 class="text-2xl font-bold text-gray-900 text-center">Sign Up</h2>
        <p class="mt-2 text-center text-sm text-gray-600">
          Already have an account?
          <%= link_to "Sign In", auth_login_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
        </p>
      </div>

      <%= form_with url: auth_register_path, local: true, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :name, "Name", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :name,
                required: true,
                autofocus: true,
                placeholder: "Enter your name",
                class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>

        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.email_field :email, 
                required: true,
                placeholder: "Enter your email address",
                class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <p class="mt-1 text-xs text-gray-500">We recommend using your work email address.</p>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password,
                required: true,
                placeholder: "Enter your password",
                class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <p class="mt-1 text-xs text-gray-500">At least 8 characters with uppercase, lowercase, and numbers.</p>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password_confirmation,
                required: true,
                placeholder: "Confirm your password",
                class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>

        <div class="flex items-start">
          <div class="flex items-center h-5">
            <%= f.check_box :terms,
                required: true,
                class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          </div>
          <div class="ml-2 text-sm">
            <%= f.label :terms, class: "text-gray-700" do %>
              I agree to the <a href="#" class="text-blue-600 hover:text-blue-500">Terms of Service</a> and
              <a href="#" class="text-blue-600 hover:text-blue-500">Privacy Policy</a>
            <% end %>
          </div>
        </div>

        <div class="flex items-start">
          <div class="flex items-center h-5">
            <%= f.check_box :marketing,
                class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          </div>
          <div class="ml-2 text-sm">
            <%= f.label :marketing, "I agree to receive marketing communications (optional)", class: "text-gray-700" %>
          </div>
        </div>

        <div>
          <%= f.submit "Sign Up", 
              class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-white font-medium bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">Or</span>
          </div>
        </div>

        <div class="mt-6 grid grid-cols-2 gap-3">
          <button class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
            <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"/>
            </svg>
            <span class="ml-2">GitHub</span>
          </button>

          <button class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
            <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"/>
            </svg>
            <span class="ml-2">Google</span>
          </button>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="mt-8 text-center text-sm text-gray-600">
      <p>&copy; 2025 TaskMate. All rights reserved.</p>
    </div>
  </div>
</div>