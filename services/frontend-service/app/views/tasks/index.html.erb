<% content_for :title, "Task Management - TaskMate" %>

<div>
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Task Management</h1>
        <p class="mt-2 text-gray-600">Organize and manage all your tasks efficiently</p>
      </div>
      <%= link_to new_task_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-colors shadow-sm flex items-center space-x-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <span>New Task</span>
      <% end %>
    </div>
  </div>

  <!-- Filters and Search -->
  <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <!-- Search -->
      <div class="md:col-span-2">
        <label class="block text-sm font-medium text-gray-700 mb-2">Search</label>
        <div class="relative">
          <input type="text" 
                 placeholder="Search tasks by title or description..." 
                 class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                 data-behavior="task-search">
          <svg class="absolute left-3 top-3 w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
      </div>

      <!-- Status Filter -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
        <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                data-behavior="status-filter">
          <option value="">All Status</option>
          <option value="pending">Pending</option>
          <option value="in_progress">In Progress</option>
          <option value="completed">Completed</option>
          <option value="cancelled">Cancelled</option>
        </select>
      </div>

      <!-- Priority Filter -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Priority</label>
        <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                data-behavior="priority-filter">
          <option value="">All Priority</option>
          <option value="high">High</option>
          <option value="medium">Medium</option>
          <option value="low">Low</option>
        </select>
      </div>
    </div>
  </div>

  <!-- Tasks List -->
  <div class="bg-white rounded-lg shadow-md border border-gray-200">
    <% if @tasks_data && @tasks_data[:tasks] && @tasks_data[:tasks].any? %>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50 border-b border-gray-200">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Task</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Due Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @tasks_data[:tasks].each do |task| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4">
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= link_to task['title'], task_path(task['id']), class: "hover:text-blue-600" %>
                    </div>
                    <% if task['description'].present? %>
                      <div class="text-sm text-gray-500 mt-1">
                        <%= truncate(task['description'], length: 100) %>
                      </div>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <% status_colors = { 'pending' => 'gray', 'in_progress' => 'blue', 'completed' => 'green', 'cancelled' => 'red' } %>
                  <% status_labels = { 'pending' => 'Pending', 'in_progress' => 'In Progress', 'completed' => 'Completed', 'cancelled' => 'Cancelled' } %>
                  <% status_color = status_colors[task['status']] || 'gray' %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= status_color %>-100 text-<%= status_color %>-800">
                    <%= status_labels[task['status']] || task['status'] %>
                  </span>
                </td>
                <td class="px-6 py-4">
                  <% priority_colors = { 'high' => 'red', 'medium' => 'yellow', 'low' => 'green' } %>
                  <% priority_labels = { 'high' => 'High', 'medium' => 'Medium', 'low' => 'Low' } %>
                  <% priority_color = priority_colors[task['priority']] || 'gray' %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= priority_color %>-100 text-<%= priority_color %>-800">
                    <%= priority_labels[task['priority']] || 'Medium' %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <% if task['due_date'].present? %>
                    <% due_date = Date.parse(task['due_date']) %>
                    <% days_left = (due_date - Date.today).to_i %>
                    <% if days_left < 0 %>
                      <span class="text-red-600 font-medium"><%= due_date.strftime('%Y-%m-%d') %> (Overdue)</span>
                    <% elsif days_left == 0 %>
                      <span class="text-orange-600 font-medium">Today</span>
                    <% elsif days_left == 1 %>
                      <span class="text-yellow-600 font-medium">Tomorrow</span>
                    <% else %>
                      <%= due_date.strftime('%Y-%m-%d') %> (<%= days_left %> days left)
                    <% end %>
                  <% else %>
                    <span class="text-gray-400">-</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <%= Date.parse(task['created_at']).strftime('%Y-%m-%d') if task['created_at'] %>
                </td>
                <td class="px-6 py-4 text-right text-sm font-medium">
                  <div class="flex justify-end space-x-2">
                    <%= link_to task_path(task['id']), class: "text-blue-600 hover:text-blue-900" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                    <% end %>
                    <%= link_to edit_task_path(task['id']), class: "text-yellow-600 hover:text-yellow-900" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                    <% end %>
                    <%= link_to task_path(task['id']), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }, class: "text-red-600 hover:text-red-900" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if @tasks_data[:pagination] && @tasks_data[:pagination]['total_pages'] && @tasks_data[:pagination]['total_pages'] > 1 %>
        <div class="bg-gray-50 px-4 py-3 border-t border-gray-200 sm:px-6">
          <div class="flex justify-between items-center">
            <div class="text-sm text-gray-700">
              Total <span class="font-medium"><%= @tasks_data[:pagination]['total_count'] || 0 %></span> tasks -
              Showing <span class="font-medium"><%= (@tasks_data[:pagination]['current_page'] - 1) * @tasks_data[:pagination]['per_page'] + 1 %></span>-<span class="font-medium"><%= [@tasks_data[:pagination]['current_page'] * @tasks_data[:pagination]['per_page'], @tasks_data[:pagination]['total_count']].min %></span>
            </div>
            <div class="flex space-x-2">
              <% if @tasks_data[:pagination]['current_page'] > 1 %>
                <%= link_to "Previous", tasks_path(page: @tasks_data[:pagination]['current_page'] - 1), class: "px-3 py-2 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              <% end %>
              <% (1..@tasks_data[:pagination]['total_pages']).each do |page| %>
                <% if page == @tasks_data[:pagination]['current_page'] %>
                  <span class="px-3 py-2 border border-blue-500 text-sm rounded-md text-white bg-blue-600"><%= page %></span>
                <% else %>
                  <%= link_to page, tasks_path(page: page), class: "px-3 py-2 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
                <% end %>
              <% end %>
              <% if @tasks_data[:pagination]['current_page'] < @tasks_data[:pagination]['total_pages'] %>
                <%= link_to "Next", tasks_path(page: @tasks_data[:pagination]['current_page'] + 1), class: "px-3 py-2 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No tasks found</h3>
        <p class="mt-1 text-sm text-gray-500">Start by creating your first task.</p>
        <div class="mt-6">
          <%= link_to new_task_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            New Task
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>