<% content_for :title, "Edit Task - TaskMate" %>

<div>
  <div class="max-w-3xl mx-auto">
    <!-- Page Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Edit Task</h1>
          <p class="mt-2 text-gray-600">Update task details and status</p>
        </div>
        <div class="text-sm text-gray-500">
          Task ID: #<%= @task['id'] if @task %>
        </div>
      </div>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
      <%= form_with url: task_path(@task ? @task['id'] : ""), method: :patch, local: true, class: "space-y-6" do |f| %>
        <!-- Title -->
        <div>
          <%= f.label :title, "Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :title,
              required: true,
              autofocus: true,
              value: (@task ? @task['title'] : ""),
              placeholder: "Enter task title",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Description -->
        <div>
          <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :description,
              rows: 5,
              value: (@task ? @task['description'] : ""),
              placeholder: "Enter detailed description of the task",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Priority and Status Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Priority -->
          <div>
            <%= f.label :priority, "Priority", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.select :priority,
                options_for_select([
                  ['Low', 'low'],
                  ['Medium', 'medium'],
                  ['High', 'high']
                ], (@task ? @task['priority'] : nil)),
                {},
                { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
          </div>

          <!-- Status -->
          <div>
            <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.select :status,
                options_for_select([
                  ['Pending', 'pending'],
                  ['In Progress', 'in_progress'],
                  ['Completed', 'completed']
                ], (@task ? @task['status'] : nil)),
                {},
                { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
          </div>
        </div>

        <!-- Due Date -->
        <div>
          <%= f.label :due_date, "Due Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.date_field :due_date,
              value: (@task && @task['due_date'] ? Date.parse(@task['due_date']).strftime('%Y-%m-%d') : nil),
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Tags -->
        <div>
          <%= f.label :tags, "Tags", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :tags,
              value: (@task ? @task['tags'] : ""),
              placeholder: "Enter tags separated by commas (e.g., urgent, work, personal)",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <p class="mt-1 text-sm text-gray-500">Separate multiple tags with commas</p>
        </div>

        <!-- Task Metadata (Read-only) -->
        <div class="bg-gray-50 rounded-lg p-4">
          <h3 class="text-sm font-medium text-gray-700 mb-3">Task Information</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
            <div>
              <span class="text-gray-500">Created:</span>
              <span class="text-gray-900">
                <%= (@task && @task['created_at']) ? Date.parse(@task['created_at']).strftime('%B %d, %Y') : 'N/A' %>
              </span>
            </div>
            <div>
              <span class="text-gray-500">Last Updated:</span>
              <span class="text-gray-900">
                <%= (@task && @task['updated_at']) ? Date.parse(@task['updated_at']).strftime('%B %d, %Y') : 'N/A' %>
              </span>
            </div>
            <% if @task && @task['completed_at'] %>
            <div>
              <span class="text-gray-500">Completed:</span>
              <span class="text-gray-900">
                <%= Date.parse(@task['completed_at']).strftime('%B %d, %Y') %>
              </span>
            </div>
            <% end %>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-between pt-6 border-t border-gray-200">
          <div class="flex space-x-3">
            <%= link_to "Cancel", task_path(@task ? @task['id'] : ""), class: "inline-flex items-center px-6 py-3 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            
            <%= link_to "View Task", task_path(@task ? @task['id'] : ""), class: "inline-flex items-center px-6 py-3 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
          
          <%= f.submit "Update Task", class: "inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>

    <!-- Actions Card -->
    <div class="mt-6 bg-white rounded-lg shadow-md border border-gray-200 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Task Actions</h3>
      <div class="flex space-x-3">
        
        <%= button_to task_path(@task ? @task['id'] : ""), method: :delete,
            data: { confirm: 'Are you sure you want to delete this task? This action cannot be undone.', turbo: true },
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete Task
        <% end %>
      </div>
    </div>
  </div>
</div>