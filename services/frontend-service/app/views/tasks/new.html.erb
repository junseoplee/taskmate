<% content_for :title, "New Task - TaskMate" %>

<div>
  <div class="max-w-3xl mx-auto">
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Create New Task</h1>
      <p class="mt-2 text-gray-600">Create a new task and organize your work systematically</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
      <%= form_with url: tasks_path, local: true, class: "space-y-6" do |f| %>
        <!-- Title -->
        <div>
          <%= f.label :title, "Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :title,
              required: true,
              autofocus: true,
              placeholder: "Enter task title",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Description -->
        <div>
          <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :description,
              rows: 5,
              placeholder: "Enter detailed description of the task",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Priority and Status Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Priority -->
          <div>
            <%= f.label :priority, "Priority", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.select :priority,
                options_for_select([
                  ['Low', 'low'],
                  ['Medium', 'medium'],
                  ['High', 'high']
                ], 'medium'),
                {},
                { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
          </div>

          <!-- Status -->
          <div>
            <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.select :status,
                options_for_select([
                  ['Pending', 'pending'],
                  ['In Progress', 'in_progress'],
                  ['Completed', 'completed']
                ], 'pending'),
                {},
                { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
          </div>
        </div>

        <!-- Due Date -->
        <div>
          <%= f.label :due_date, "Due Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.date_field :due_date,
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Tags -->
        <div>
          <%= f.label :tags, "Tags", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :tags,
              placeholder: "Enter tags separated by commas (e.g., urgent, work, personal)",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <p class="mt-1 text-sm text-gray-500">Separate multiple tags with commas</p>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-between pt-6 border-t border-gray-200">
          <%= link_to "Cancel", tasks_path, class: "inline-flex items-center px-6 py-3 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          
          <%= f.submit "Create Task", class: "inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>

    <!-- Help Text -->
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">Tips for creating effective tasks</h3>
          <div class="mt-2 text-sm text-blue-700">
            <ul class="list-disc pl-5 space-y-1">
              <li>Use clear and specific titles</li>
              <li>Break down large tasks into smaller, manageable sub-tasks</li>
              <li>Set realistic due dates</li>
              <li>Use tags to organize and filter your tasks</li>
              <li>Include enough detail in the description to understand the task later</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>