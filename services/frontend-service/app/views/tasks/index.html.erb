<% content_for :title, "Task Management - TaskMate" %>

<div>
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Task Management</h1>
        <p class="mt-2 text-gray-600">Organize and manage all your tasks efficiently</p>
      </div>
      <%= link_to new_task_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-colors shadow-sm flex items-center space-x-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <span>New Task</span>
      <% end %>
    </div>
  </div>

  <!-- Quick Navigation -->
  <div class="mb-6">
    <div class="flex flex-wrap items-center gap-3">
      <%= link_to overdue_tasks_path, class: "bg-white hover:bg-gray-50 text-red-600 border border-red-200 font-medium py-2 px-4 rounded-lg transition-colors shadow-sm flex items-center space-x-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
        </svg>
        <span>Overdue</span>
      <% end %>
      
      <%= link_to upcoming_tasks_path, class: "bg-white hover:bg-gray-50 text-blue-600 border border-blue-200 font-medium py-2 px-4 rounded-lg transition-colors shadow-sm flex items-center space-x-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>Upcoming</span>
      <% end %>
    </div>
  </div>

  <!-- Filters and Search -->
  <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 mb-6">
    <%= form_with url: tasks_path, method: :get, local: true do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
        <!-- Search -->
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-gray-700 mb-2">Search</label>
          <div class="relative">
            <%= form.text_field :q, 
                value: @search_query,
                placeholder: "Search tasks by title or description...", 
                class: "w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
            <svg class="absolute left-3 top-3 w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
        </div>

        <!-- Status Filter -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
          <%= form.select :status, 
              options_for_select([
                ['All Status', ''],
                ['Pending', 'pending'],
                ['In Progress', 'in_progress'],
                ['Completed', 'completed']
              ], params[:status]),
              {},
              { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
        </div>

        <!-- Priority Filter -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Priority</label>
          <%= form.select :priority, 
              options_for_select([
                ['All Priority', ''],
                ['High', 'high'],
                ['Medium', 'medium'],
                ['Low', 'low']
              ], params[:priority]),
              {},
              { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
      </div>

      <!-- Search and Clear buttons -->
      <div class="flex justify-center gap-3">
        <%= form.submit "Search Tasks", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-colors shadow-sm" %>
        <%= link_to "Clear Filters", tasks_path, class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-6 rounded-lg transition-colors" %>
      </div>
    <% end %>
  </div>

  <!-- Tasks List -->
  <div class="bg-white rounded-lg shadow-md border border-gray-200">
    <% if @tasks_data && @tasks_data[:tasks] && @tasks_data[:tasks].any? %>
      <!-- Results Header (show for search results) -->
      <% if @search_query.present? %>
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex justify-between items-center">
            <div>
              <h3 class="text-lg font-medium text-gray-900">Search Results</h3>
              <p class="text-sm text-gray-500 mt-1">
                Found <%= @tasks_data[:total] || @tasks_data[:tasks].count %> task<%= (@tasks_data[:total] || @tasks_data[:tasks].count) == 1 ? '' : 's' %>
                for "<%= @search_query %>"
              </p>
            </div>
          </div>
        </div>
      <% end %>
      
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50 border-b border-gray-200">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Task</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Due Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @tasks_data[:tasks].each do |task| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4">
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= task['title'] %>
                    </div>
                    <% if task['description'].present? %>
                      <div class="text-sm text-gray-500 mt-1">
                        <%= truncate(task['description'], length: 100) %>
                      </div>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <% status_colors = { 'pending' => 'gray', 'in_progress' => 'blue', 'completed' => 'green' } %>
                  <% status_labels = { 'pending' => 'Pending', 'in_progress' => 'In Progress', 'completed' => 'Completed' } %>
                  <% status_color = status_colors[task['status']] || 'gray' %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= status_color %>-100 text-<%= status_color %>-800">
                    <%= status_labels[task['status']] || task['status'] %>
                  </span>
                </td>
                <td class="px-6 py-4">
                  <% priority_colors = { 'high' => 'red', 'medium' => 'yellow', 'low' => 'green' } %>
                  <% priority_labels = { 'high' => 'High', 'medium' => 'Medium', 'low' => 'Low' } %>
                  <% priority_color = priority_colors[task['priority']] || 'gray' %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= priority_color %>-100 text-<%= priority_color %>-800">
                    <%= priority_labels[task['priority']] || 'Medium' %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <% if task['due_date'].present? %>
                    <% due_date = Date.parse(task['due_date']) %>
                    <% days_left = (due_date - Date.today).to_i %>
                    <% if days_left < 0 %>
                      <span class="text-red-600 font-medium"><%= due_date.strftime('%Y-%m-%d') %> (Overdue)</span>
                    <% elsif days_left == 0 %>
                      <span class="text-orange-600 font-medium">Today</span>
                    <% elsif days_left == 1 %>
                      <span class="text-yellow-600 font-medium">Tomorrow</span>
                    <% else %>
                      <%= due_date.strftime('%Y-%m-%d') %> (<%= days_left %> days left)
                    <% end %>
                  <% else %>
                    <span class="text-gray-400">-</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <%= Date.parse(task['created_at']).strftime('%Y-%m-%d') if task['created_at'] %>
                </td>
                <td class="px-6 py-4 text-right text-sm font-medium">
                  <div class="flex justify-end space-x-2">
                    <% case task['status'] %>
                    <% when 'pending' %>
                      <!-- 다음 상태로 (pending → in_progress) -->
                      <%= button_to task_path(task['id']), method: :patch, 
                          params: { task: { status: 'in_progress' } },
                          data: { confirm: 'Move this task to In Progress?', turbo: true }, 
                          class: "text-blue-600 hover:text-blue-900 bg-transparent border-0 p-0 cursor-pointer" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                      <% end %>
                    <% when 'in_progress' %>
                      <!-- 이전 상태로 (in_progress → pending) -->
                      <%= button_to task_path(task['id']), method: :patch, 
                          params: { task: { status: 'pending' } },
                          data: { confirm: 'Move this task back to Pending?', turbo: true }, 
                          class: "text-orange-600 hover:text-orange-900 bg-transparent border-0 p-0 cursor-pointer" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                      <% end %>
                      <!-- 다음 상태로 (in_progress → completed) -->
                      <%= button_to task_path(task['id']), method: :patch, 
                          params: { task: { status: 'completed' } },
                          data: { confirm: 'Mark this task as completed?', turbo: true }, 
                          class: "text-green-600 hover:text-green-900 bg-transparent border-0 p-0 cursor-pointer" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                      <% end %>
                    <% when 'completed' %>
                      <!-- 이전 상태로 (completed → pending) -->
                      <%= button_to task_path(task['id']), method: :patch, 
                          params: { task: { status: 'pending' } },
                          data: { confirm: 'Move this task back to Pending?', turbo: true }, 
                          class: "text-orange-600 hover:text-orange-900 bg-transparent border-0 p-0 cursor-pointer" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                        </svg>
                      <% end %>
                    <% end %>
                    <%= button_to task_path(task['id']), method: :delete, data: { confirm: 'Are you sure you want to delete this task?', turbo: true }, class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if @tasks_data[:pagination] && @tasks_data[:pagination]['total_pages'] && @tasks_data[:pagination]['total_pages'] > 1 %>
        <div class="bg-gray-50 px-4 py-3 border-t border-gray-200 sm:px-6">
          <div class="flex justify-between items-center">
            <div class="text-sm text-gray-700">
              Total <span class="font-medium"><%= @tasks_data[:pagination]['total_count'] || 0 %></span> tasks -
              Showing <span class="font-medium"><%= (@tasks_data[:pagination]['current_page'] - 1) * @tasks_data[:pagination]['per_page'] + 1 %></span>-<span class="font-medium"><%= [@tasks_data[:pagination]['current_page'] * @tasks_data[:pagination]['per_page'], @tasks_data[:pagination]['total_count']].min %></span>
            </div>
            <div class="flex space-x-2">
              <% if @tasks_data[:pagination]['current_page'] > 1 %>
                <%= link_to "Previous", tasks_path(page: @tasks_data[:pagination]['current_page'] - 1), class: "px-3 py-2 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              <% end %>
              <% (1..@tasks_data[:pagination]['total_pages']).each do |page| %>
                <% if page == @tasks_data[:pagination]['current_page'] %>
                  <span class="px-3 py-2 border border-blue-500 text-sm rounded-md text-white bg-blue-600"><%= page %></span>
                <% else %>
                  <%= link_to page, tasks_path(page: page), class: "px-3 py-2 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
                <% end %>
              <% end %>
              <% if @tasks_data[:pagination]['current_page'] < @tasks_data[:pagination]['total_pages'] %>
                <%= link_to "Next", tasks_path(page: @tasks_data[:pagination]['current_page'] + 1), class: "px-3 py-2 border border-gray-300 text-sm rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No tasks found</h3>
        <p class="mt-1 text-sm text-gray-500">Start by creating your first task.</p>
        <div class="mt-6">
          <%= link_to new_task_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            New Task
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('task-search-input');
  const searchButton = document.getElementById('search-button');
  const statusFilter = document.getElementById('status-filter');
  const priorityFilter = document.getElementById('priority-filter');
  
  // 검색 함수
  function performSearch() {
    const searchQuery = searchInput.value.trim();
    const status = statusFilter.value;
    const priority = priorityFilter.value;
    
    // URL 파라미터 구성
    const params = new URLSearchParams();
    if (searchQuery) params.append('search', searchQuery);
    if (status) params.append('status', status);
    if (priority) params.append('priority', priority);
    
    // 현재 페이지로 리디렉션 (파라미터와 함께)
    const url = params.toString() ? `${window.location.pathname}?${params.toString()}` : window.location.pathname;
    window.location.href = url;
  }
  
  // 엔터키로 검색
  searchInput.addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
      performSearch();
    }
  });
  
  // 검색 버튼 클릭
  searchButton.addEventListener('click', function() {
    performSearch();
  });
  
  // 필터 변경 시 자동 검색
  statusFilter.addEventListener('change', performSearch);
  priorityFilter.addEventListener('change', performSearch);
  
  // URL 파라미터에서 현재 값 설정
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.get('search')) {
    searchInput.value = urlParams.get('search');
  }
  if (urlParams.get('status')) {
    statusFilter.value = urlParams.get('status');
  }
  if (urlParams.get('priority')) {
    priorityFilter.value = urlParams.get('priority');
  }
});
</script>