<% content_for :title, "File Management - TaskMate" %>

<div>
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">File Management</h1>
        <p class="mt-2 text-gray-600">Upload and manage files related to your tasks</p>
      </div>
      <button class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-colors shadow-sm flex items-center space-x-2"
              onclick="toggleUrlForm()">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.102m0 0l1.102-1.102a4 4 0 105.656-5.656l-4-4a4 4 0 00-5.656 0l-1.102 1.102"></path>
        </svg>
        <span>Add File URL</span>
      </button>
    </div>
  </div>


  <!-- URL Form Area -->
  <div id="url-form" class="bg-white rounded-lg shadow-md border border-gray-200 p-6 mb-6 hidden">
    <div class="border-2 border-dashed border-blue-300 rounded-lg p-8">
      <div class="text-center">
        <svg class="mx-auto h-12 w-12 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.102m0 0l1.102-1.102a4 4 0 105.656-5.656l-4-4a4 4 0 00-5.656 0l-1.102 1.102"></path>
        </svg>
        <div class="mt-4">
          <h3 class="text-lg text-gray-900 font-medium">Add File by URL</h3>
          <p class="text-sm text-gray-500 mt-2">Enter the URL of a file you want to reference</p>
        </div>
        
        <%= form_with url: "/files/add_url", method: :post, local: true, id: "url-file-form", class: "mt-6 max-w-lg mx-auto" do |form| %>
          <div class="space-y-4">
            <div>
              <%= form.label :file_url, "File URL", class: "block text-sm font-medium text-gray-700 text-left" %>
              <%= form.url_field :file_url, required: true,
                     class: "mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                     placeholder: "https://example.com/document.pdf" %>
            </div>
            
            <div>
              <%= form.label :filename, "Display Name", class: "block text-sm font-medium text-gray-700 text-left" %>
              <%= form.text_field :filename, required: true,
                     class: "mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                     placeholder: "My Document.pdf" %>
            </div>
            
            <div>
              <%= form.label :category_id, "Category", class: "block text-sm font-medium text-gray-700 text-left" %>
              <%= form.select :category_id,
                      options_for_select([
                        ["Select Category", ""],
                        ["Documents", "1"],
                        ["Images", "2"],
                        ["Archives", "3"],
                        ["Others", "4"]
                      ]),
                      {},
                      { class: "mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
            </div>
            
            <div class="flex space-x-3">
              <button type="submit"
                      class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors">
                Add URL File
              </button>
              <button type="button" onclick="toggleUrlForm()"
                      class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                Cancel
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- File Filters -->
  <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 mb-6">
    <%= form_with url: files_path, method: :get, local: true do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
        <!-- Search -->
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-gray-700 mb-2">Search Files</label>
          <div class="relative">
            <%= form.text_field :search, 
                value: params[:search],
                placeholder: "Search by filename...",
                class: "w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
            <svg class="absolute left-3 top-3 w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
        </div>

        <!-- Category Filter -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
          <%= form.select :category_id, 
              options_for_select([
                ['All Categories', '']
              ] + (@categories&.map { |category| [category['name'], category['id']] } || [
                ['Documents', '1'],
                ['Images', '2'],
                ['Archives', '3'],
                ['Others', '4']
              ]), params[:category_id]),
              {},
              { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
        </div>

      </div>

      <!-- Filter buttons -->
      <div class="flex justify-center gap-3">
        <%= form.submit "Apply Filters", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-colors shadow-sm" %>
        <%= link_to "Clear Filters", files_path, class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-6 rounded-lg transition-colors" %>
      </div>
    <% end %>
  </div>

  <!-- File Statistics -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="bg-blue-100 p-3 rounded-full">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Total Files</p>
          <p class="text-2xl font-bold text-gray-900"><%= @files&.count || 0 %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="bg-yellow-100 p-3 rounded-full">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">This Month</p>
          <% current_month_files = @files&.select { |file| file['created_at'] && Date.parse(file['created_at']).month == Date.current.month && Date.parse(file['created_at']).year == Date.current.year }&.count || 0 %>
          <p class="text-2xl font-bold text-gray-900"><%= current_month_files %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Files List -->
  <div class="bg-white rounded-lg shadow-md border border-gray-200">
    <% if @files && @files.any? %>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50 border-b border-gray-200">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Filename</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Uploaded</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @files.each do |file| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 mr-3">
                      <% file_extension = (file['original_filename'] || file['filename'])&.split('.')&.last&.downcase %>
                      <% case file_extension %>
                      <% when 'pdf' %>
                        <div class="w-8 h-8 bg-red-100 rounded flex items-center justify-center">
                          <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path>
                          </svg>
                        </div>
                      <% when 'doc', 'docx' %>
                        <div class="w-8 h-8 bg-blue-100 rounded flex items-center justify-center">
                          <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path>
                          </svg>
                        </div>
                      <% when 'xls', 'xlsx' %>
                        <div class="w-8 h-8 bg-green-100 rounded flex items-center justify-center">
                          <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path>
                          </svg>
                        </div>
                      <% when 'jpg', 'jpeg', 'png', 'gif' %>
                        <div class="w-8 h-8 bg-purple-100 rounded flex items-center justify-center">
                          <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
                          </svg>
                        </div>
                      <% else %>
                        <div class="w-8 h-8 bg-gray-100 rounded flex items-center justify-center">
                          <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path>
                          </svg>
                        </div>
                      <% end %>
                    </div>
                    <div>
                      <div class="text-sm font-medium text-gray-900">
                        <% if file['file_url'] %>
                          <%= link_to (file['original_filename'] || file['filename']), file['file_url'], target: '_blank', class: "text-blue-600 hover:text-blue-900 hover:underline" %>
                        <% else %>
                          <%= file['original_filename'] || file['filename'] %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                    <%= file_extension&.upcase || 'FILE' %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <%= file['created_at'] ? Date.parse(file['created_at']).strftime('%Y-%m-%d') : '-' %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <% if file['file_category'] && file['file_category']['name'] %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                      <%= file['file_category']['name'] %>
                    </span>
                  <% elsif file['category_id'] && @categories %>
                    <% category = @categories.find { |c| c['id'] == file['category_id'] } %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                      <%= category ? category['name'] : 'Unassigned' %>
                    </span>
                  <% else %>
                    <span class="text-gray-400">Unassigned</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 text-right text-sm font-medium">
                  <%= button_to "/files/#{file['id']}", method: :delete, data: { confirm: 'Are you sure you want to delete this file?', turbo: true }, class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No files added</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by adding your first file URL.</p>
        <div class="mt-6">
          <button class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700"
                  onclick="toggleUrlForm()">
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.102m0 0l1.102-1.102a4 4 0 105.656-5.656l-4-4a4 4 0 00-5.656 0l-1.102 1.102"></path>
            </svg>
            Add File URL
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  // URL Form handling
  function toggleUrlForm() {
    const urlForm = document.getElementById('url-form');
    
    if (urlForm.classList.contains('hidden')) {
      urlForm.classList.remove('hidden');
      // Clear form
      document.getElementById('url-file-form').reset();
      // Focus on URL input
      document.getElementById('file_url').focus();
    } else {
      urlForm.classList.add('hidden');
    }
  }

  // Handle form submissions
  document.addEventListener('DOMContentLoaded', function() {
    // URL form submission is now handled by Rails form_with

    // Auto-fill filename from URL
    document.getElementById('file_url').addEventListener('blur', function(e) {
      const url = e.target.value;
      const filenameInput = document.getElementById('filename');
      
      if (url && !filenameInput.value) {
        try {
          const urlObj = new URL(url);
          const pathname = urlObj.pathname;
          const filename = pathname.split('/').pop();
          if (filename) {
            filenameInput.value = decodeURIComponent(filename);
          }
        } catch (error) {
          console.log('Could not auto-fill filename from URL');
        }
      }
    });
  });


  // Get content type from URL extension
  function getContentTypeFromUrl(url) {
    try {
      const urlObj = new URL(url);
      const pathname = urlObj.pathname.toLowerCase();
      
      if (pathname.endsWith('.pdf')) return 'application/pdf';
      if (pathname.endsWith('.doc') || pathname.endsWith('.docx')) return 'application/msword';
      if (pathname.endsWith('.xls') || pathname.endsWith('.xlsx')) return 'application/vnd.ms-excel';
      if (pathname.endsWith('.ppt') || pathname.endsWith('.pptx')) return 'application/vnd.ms-powerpoint';
      if (pathname.endsWith('.jpg') || pathname.endsWith('.jpeg')) return 'image/jpeg';
      if (pathname.endsWith('.png')) return 'image/png';
      if (pathname.endsWith('.gif')) return 'image/gif';
      if (pathname.endsWith('.zip')) return 'application/zip';
      
      return 'application/octet-stream';
    } catch (error) {
      return 'application/octet-stream';
    }
  }

  // Show success message
  function showSuccess(message) {
    const messageDiv = document.createElement('div');
    messageDiv.className = 'fixed top-4 right-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded z-50';
    messageDiv.textContent = message;
    document.body.appendChild(messageDiv);
    setTimeout(function() { messageDiv.remove(); }, 3000);
  }

  // Show error message
  function showError(message) {
    const messageDiv = document.createElement('div');
    messageDiv.className = 'fixed top-4 right-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded z-50';
    messageDiv.textContent = message;
    document.body.appendChild(messageDiv);
    setTimeout(function() { messageDiv.remove(); }, 5000);
  }

  function shareFile(fileId) {
    // Implement file sharing functionality
    alert('File sharing functionality will be implemented soon.');
  }
</script>