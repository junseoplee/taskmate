<% content_for :title, "Overdue Tasks - TaskMate" %>

<div>
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-red-600">Overdue Tasks</h1>
        <p class="mt-2 text-gray-600">Tasks that have passed their due date and need immediate attention</p>
        <% if @current_date %>
          <p class="mt-1 text-sm text-gray-500">As of <%= Date.parse(@current_date).strftime('%B %d, %Y') %></p>
        <% end %>
      </div>
      <div class="flex space-x-3">
        <%= link_to tasks_path, class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-3 px-6 rounded-lg transition-colors shadow-sm flex items-center space-x-2" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
          </svg>
          <span>All Tasks</span>
        <% end %>
        <%= link_to upcoming_tasks_path, class: "bg-blue-100 hover:bg-blue-200 text-blue-700 font-medium py-3 px-6 rounded-lg transition-colors shadow-sm flex items-center space-x-2" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>Upcoming</span>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Overdue Summary -->
  <% if @tasks && @tasks.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-6">
      <div class="flex items-center">
        <svg class="w-8 h-8 text-red-600 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
        </svg>
        <div>
          <h3 class="text-lg font-semibold text-red-800">
            <%= pluralize(@total || @tasks.count, 'overdue task') %> requiring attention
          </h3>
          <p class="text-red-700 mt-1">These tasks have passed their due dates and should be prioritized</p>
        </div>
      </div>
    </div>

    <!-- Overdue Tasks List -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50 border-b border-gray-200">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Task</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Due Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Days Overdue</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @tasks.each do |task| %>
              <% due_date = Date.parse(task['due_date']) if task['due_date'] %>
              <% days_overdue = due_date ? (Date.today - due_date).to_i : 0 %>
              <% urgency_class = days_overdue > 7 ? 'bg-red-50' : days_overdue > 3 ? 'bg-orange-50' : 'bg-yellow-50' %>
              
              <tr class="hover:bg-gray-50 transition-colors <%= urgency_class %>">
                <td class="px-6 py-4">
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= link_to task['title'], task_path(task['id']), class: "hover:text-blue-600" %>
                    </div>
                    <% if task['description'].present? %>
                      <div class="text-sm text-gray-500 mt-1">
                        <%= truncate(task['description'], length: 80) %>
                      </div>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <% status_colors = { 'pending' => 'gray', 'in_progress' => 'blue', 'completed' => 'green' } %>
                  <% status_labels = { 'pending' => 'Pending', 'in_progress' => 'In Progress', 'completed' => 'Completed' } %>
                  <% status_color = status_colors[task['status']] || 'gray' %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= status_color %>-100 text-<%= status_color %>-800">
                    <%= status_labels[task['status']] || task['status'] %>
                  </span>
                </td>
                <td class="px-6 py-4">
                  <% priority_colors = { 'high' => 'red', 'medium' => 'yellow', 'low' => 'green' } %>
                  <% priority_labels = { 'high' => 'High', 'medium' => 'Medium', 'low' => 'Low' } %>
                  <% priority_color = priority_colors[task['priority']] || 'gray' %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= priority_color %>-100 text-<%= priority_color %>-800">
                    <%= priority_labels[task['priority']] || 'Medium' %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm">
                  <% if due_date %>
                    <div class="text-red-600 font-medium">
                      <%= due_date.strftime('%Y-%m-%d') %>
                    </div>
                    <div class="text-xs text-gray-500">
                      <%= due_date.strftime('%A, %B %d') %>
                    </div>
                  <% else %>
                    <span class="text-gray-400">No due date</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 text-sm">
                  <% if due_date %>
                    <% urgency_color = days_overdue > 7 ? 'text-red-700' : days_overdue > 3 ? 'text-orange-600' : 'text-yellow-600' %>
                    <span class="font-semibold <%= urgency_color %>">
                      <%= pluralize(days_overdue, 'day') %>
                    </span>
                    <% if days_overdue > 7 %>
                      <div class="text-xs text-red-500 font-medium">Critical!</div>
                    <% elsif days_overdue > 3 %>
                      <div class="text-xs text-orange-500">Urgent</div>
                    <% end %>
                  <% else %>
                    <span class="text-gray-400">-</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 text-right text-sm font-medium">
                  <div class="flex justify-end space-x-2">
                    <% if task['status'] != 'completed' %>
                      <%= button_to complete_task_path(task['id']), 
                          method: :patch, 
                          data: { confirm: 'Mark this overdue task as completed?', turbo: true }, 
                          class: "bg-green-100 hover:bg-green-200 text-green-700 px-3 py-1 rounded text-xs font-medium transition-colors border-0" do %>
                        Complete
                      <% end %>
                    <% end %>
                    <%= link_to task_path(task['id']), class: "text-blue-600 hover:text-blue-900" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                    <% end %>
                    <%= link_to edit_task_path(task['id']), class: "text-yellow-600 hover:text-yellow-900" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-6 bg-gray-50 rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Quick Actions</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="text-center">
          <%= link_to tasks_path(status: 'pending'), class: "block bg-white hover:bg-gray-50 border border-gray-200 rounded-lg p-4 transition-colors" do %>
            <svg class="w-8 h-8 text-gray-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div class="font-medium text-gray-900">View All Pending</div>
            <div class="text-sm text-gray-500">See all pending tasks</div>
          <% end %>
        </div>
        
        <div class="text-center">
          <%= link_to new_task_path, class: "block bg-white hover:bg-gray-50 border border-gray-200 rounded-lg p-4 transition-colors" do %>
            <svg class="w-8 h-8 text-blue-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            <div class="font-medium text-gray-900">Create New Task</div>
            <div class="text-sm text-gray-500">Add a new task</div>
          <% end %>
        </div>
        
        <div class="text-center">
          <%= link_to statistics_tasks_path, class: "block bg-white hover:bg-gray-50 border border-gray-200 rounded-lg p-4 transition-colors" do %>
            <svg class="w-8 h-8 text-green-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            <div class="font-medium text-gray-900">View Statistics</div>
            <div class="text-sm text-gray-500">Analyze performance</div>
          <% end %>
        </div>
      </div>
    </div>

  <% else %>
    <!-- No Overdue Tasks -->
    <div class="bg-green-50 border border-green-200 rounded-lg p-8 text-center">
      <svg class="w-16 h-16 text-green-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <h3 class="text-xl font-semibold text-green-800 mb-2">Great job! No overdue tasks</h3>
      <p class="text-green-700 mb-6">You're staying on top of your deadlines. Keep up the excellent work!</p>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 max-w-md mx-auto">
        <%= link_to tasks_path, class: "bg-white hover:bg-gray-50 text-green-700 border border-green-200 font-medium py-2 px-4 rounded-lg transition-colors" do %>
          View All Tasks
        <% end %>
        <%= link_to upcoming_tasks_path, class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" do %>
          Upcoming Tasks
        <% end %>
        <%= link_to new_task_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" do %>
          New Task
        <% end %>
      </div>
    </div>
  <% end %>
</div>