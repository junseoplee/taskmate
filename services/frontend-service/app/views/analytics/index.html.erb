<% content_for :title, "Analytics - TaskMate" %>

<div>
  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Analytics Dashboard</h1>
    <p class="mt-2 text-gray-600">Analyze your task performance and gain valuable insights</p>
  </div>

  <!-- Time Range Filter -->
  <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 mb-6">
    <div class="flex flex-wrap items-center justify-center gap-6">
      <div class="flex items-center space-x-3">
        <label class="text-sm font-medium text-gray-700">Time Period</label>
        <select id="timePeriod" class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 min-w-[140px]">
          <option value="7">Last 7 days</option>
          <option value="30" selected>Last 30 days</option>
          <option value="90">Last 90 days</option>
          <option value="365">Last year</option>
        </select>
      </div>
      <button id="refreshButton" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium transition-colors flex items-center space-x-2">
        <span id="refreshText">Refresh</span>
        <span id="refreshSpinner" class="hidden inline-flex items-center">
          <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          Refreshing...
        </span>
      </button>
    </div>
  </div>

  <!-- Key Metrics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total Tasks -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Total Tasks</p>
          <p class="text-3xl font-bold text-gray-900 mt-2"><%= @analytics_data&.dig('total_tasks') || 127 %></p>
          <p class="text-xs text-green-600 mt-1">+8% from last month</p>
        </div>
        <div class="bg-blue-100 p-3 rounded-full">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Completion Rate -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Completion Rate</p>
          <p class="text-3xl font-bold text-green-600 mt-2"><%= @analytics_data&.dig('completion_rate') || 76 %>%</p>
          <p class="text-xs text-green-600 mt-1">+3% from last month</p>
        </div>
        <div class="bg-green-100 p-3 rounded-full">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- In Progress Tasks -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">In Progress Tasks</p>
          <p class="text-3xl font-bold text-yellow-600 mt-2"><%= @analytics_data&.dig('in_progress_tasks') || 0 %></p>
          <p class="text-xs text-gray-600 mt-1">Currently active</p>
        </div>
        <div class="bg-yellow-100 p-3 rounded-full">
          <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Overdue Tasks -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Overdue Tasks</p>
          <p class="text-3xl font-bold text-red-600 mt-2"><%= @analytics_data&.dig('overdue_tasks') || 12 %></p>
          <p class="text-xs text-red-600 mt-1">+2 from last month</p>
        </div>
        <div class="bg-red-100 p-3 rounded-full">
          <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Key Insights -->
  <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 mb-6">
    <h2 class="text-xl font-bold text-gray-900 mb-6">Key Insights</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
        <span class="text-sm text-gray-600">Most Productive Day</span>
        <span class="text-sm font-semibold text-blue-600">Thursday</span>
      </div>
      <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
        <span class="text-sm text-gray-600">Daily Average Completed</span>
        <span class="text-sm font-semibold text-green-600">3.2 tasks</span>
      </div>
      <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
        <span class="text-sm text-gray-600">Current Streak</span>
        <span class="text-sm font-semibold text-yellow-600">7 days</span>
      </div>
      <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
        <span class="text-sm text-gray-600">Weekly Goal Progress</span>
        <span class="text-sm font-semibold text-purple-600">85%</span>
      </div>
    </div>
  </div>

  <!-- Priority Distribution -->
  <% 
    distribution = @priority_distribution_data&.dig('distribution') || {}
    high_priority = distribution['high'] || 8
    medium_priority = distribution['medium'] || 12
    low_priority = distribution['low'] || 4
    total_priority_tasks = high_priority + medium_priority + low_priority
    # Use the sum of individual priorities as total to ensure consistency
    total_tasks = total_priority_tasks > 0 ? total_priority_tasks : (@priority_distribution_data&.dig('total_tasks') || 0)
  %>
  <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 mb-8 mx-auto max-w-2xl">
    <h2 class="text-xl font-bold text-gray-900 mb-4">Task Priority Distribution</h2>
    <div class="h-80 flex items-center justify-center">
      <!-- Pie chart placeholder -->
      <div class="relative w-48 h-48">
        <div class="w-48 h-48 rounded-full border-8" style="border-color: #ef4444 #f59e0b #10b981 #6b7280; border-style: solid;">
          <!-- Pie chart segments would go here in a real implementation -->
        </div>
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="text-center">
            <p class="text-2xl font-bold text-gray-900"><%= total_tasks %></p>
            <p class="text-sm text-gray-600">Total Tasks</p>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-4 grid grid-cols-2 gap-4">
      <div class="flex items-center space-x-3">
        <div class="w-4 h-4 rounded-full flex-shrink-0" style="background-color: #ef4444;"></div>
        <span class="text-sm text-gray-700">High: <%= high_priority %></span>
      </div>
      <div class="flex items-center space-x-3">
        <div class="w-4 h-4 rounded-full flex-shrink-0" style="background-color: #f59e0b;"></div>
        <span class="text-sm text-gray-700">Medium: <%= medium_priority %></span>
      </div>
      <div class="flex items-center space-x-3">
        <div class="w-4 h-4 rounded-full flex-shrink-0" style="background-color: #10b981;"></div>
        <span class="text-sm text-gray-700">Low: <%= low_priority %></span>
      </div>
      <div class="flex items-center space-x-3">
        <div class="w-4 h-4 rounded-full flex-shrink-0" style="background-color: #6b7280;"></div>
        <span class="text-sm text-gray-700">Total: <%= total_tasks %></span>
      </div>
    </div>
  </div>


  <!-- Recent Performance -->
  <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-bold text-gray-900">Recent Performance</h2>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Week Summary -->
      <div class="border border-gray-200 rounded-lg p-4">
        <h3 class="text-lg font-semibold text-gray-800 mb-3">This Week</h3>
        <div class="space-y-2">
          <div class="flex justify-between">
            <span class="text-sm text-gray-600">Completed Tasks</span>
            <span class="text-sm font-medium text-gray-900"><%= @analytics_data&.dig('completed_tasks') || 0 %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-sm text-gray-600">In Progress</span>
            <span class="text-sm font-medium text-gray-900"><%= @analytics_data&.dig('in_progress_tasks') || 0 %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-sm text-gray-600">Pending Tasks</span>
            <span class="text-sm font-medium text-gray-900"><%= @analytics_data&.dig('pending_tasks') || 0 %></span>
          </div>
          <div class="pt-2 border-t">
            <div class="flex justify-between">
              <span class="text-sm font-medium text-green-600">Completion Rate</span>
              <span class="text-sm font-medium text-green-600"><%= @analytics_data&.dig('completion_rate') || 0 %>%</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Month Summary -->
      <div class="border border-gray-200 rounded-lg p-4">
        <h3 class="text-lg font-semibold text-gray-800 mb-3">This Month</h3>
        <div class="space-y-2">
          <div class="flex justify-between">
            <span class="text-sm text-gray-600">Total Tasks</span>
            <span class="text-sm font-medium text-gray-900"><%= @analytics_data&.dig('total_tasks') || 0 %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-sm text-gray-600">Completed Tasks</span>
            <span class="text-sm font-medium text-gray-900"><%= @analytics_data&.dig('completed_tasks') || 0 %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-sm text-gray-600">Overdue Tasks</span>
            <span class="text-sm font-medium text-red-600"><%= @analytics_data&.dig('overdue_tasks') || 0 %></span>
          </div>
          <div class="pt-2 border-t">
            <div class="flex justify-between">
              <span class="text-sm font-medium text-green-600">vs Goal</span>
              <span class="text-sm font-medium text-green-600">+12%</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Goals Progress -->
      <div class="border border-gray-200 rounded-lg p-4">
        <h3 class="text-lg font-semibold text-gray-800 mb-3">Goal Achievement</h3>
        <div class="space-y-3">
          <div>
            <div class="flex justify-between mb-1">
              <span class="text-sm text-gray-600">Weekly Goal</span>
              <span class="text-sm font-medium text-gray-900">85%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-blue-600 h-2 rounded-full" style="width: 85%"></div>
            </div>
          </div>
          <div>
            <div class="flex justify-between mb-1">
              <span class="text-sm text-gray-600">Monthly Goal</span>
              <span class="text-sm font-medium text-gray-900">76%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-green-600 h-2 rounded-full" style="width: 76%"></div>
            </div>
          </div>
          <div>
            <div class="flex justify-between mb-1">
              <span class="text-sm text-gray-600">Quarterly Goal</span>
              <span class="text-sm font-medium text-gray-900">68%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-yellow-600 h-2 rounded-full" style="width: 68%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function refreshAnalytics() {
  const button = document.getElementById('refreshButton');
  const refreshText = document.getElementById('refreshText');
  const refreshSpinner = document.getElementById('refreshSpinner');
  const timePeriod = document.getElementById('timePeriod').value;
  
  // Show loading state
  refreshText.classList.add('hidden');
  refreshSpinner.classList.remove('hidden');
  button.disabled = true;
  
  // Add period parameter to current URL and reload
  const url = new URL(window.location);
  url.searchParams.set('period', timePeriod + 'd');
  
  // Reload the page with the new period
  setTimeout(() => {
    window.location.href = url.toString();
  }, 500); // Small delay to show the loading state
}

// Auto-refresh when select changes
document.getElementById('timePeriod').addEventListener('change', function() {
  refreshAnalytics();
});
</script>